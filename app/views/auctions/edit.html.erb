<h1>Editing auction</h1>

<% form_for(@auction) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :exchange_rate %><br />
    <%= f.text_field :exchange_rate %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @auction %> |
<%= link_to 'Back', auctions_path %>