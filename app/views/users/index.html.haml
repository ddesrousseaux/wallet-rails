%h1
  Listing users
%table
  %tr
    %th
      Firstname
    %th
      Lastname
    %th
      Email
  - @users.each do |user|
    %tr
      %td
        = h user.firstname
      %td
        = h user.lastname
      %td
        = h user.email
      %td
        = link_to 'Show', user
      %td
        = link_to 'Edit', edit_user_path(user)
      %td
        = link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete
%br
= link_to 'New user', new_user_path
